<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<DialogPane fx:id="updateCityDialogPane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rockandcode.redcalc.controller.UpdateCityDialogController">
    <headerText>
        To update the artist name
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="New name" GridPane.columnIndex="0" GridPane.rowIndex="0" /> 
            <TextField fx:id="newCityName" promptText="City Name..." GridPane.columnIndex="1" GridPane.rowIndex="0" />
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </GridPane>
    </content>    
</DialogPane>
